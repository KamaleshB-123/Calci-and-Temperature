    BoxLayout:
        orientation: "vertical"
        size: root.width,root.height
        Button:
            text: "Back To Main Menu"
            size_hint: .2,.1
            font_size:'15sp'
            on_release: app.root.current ="Main Menu"
            background_color: 0.200, 0.150, 0.250, 1
            bold: True
            on_release: app.root.transition = SwapTransition()

        Button:
            text: "Temperature Menu"
            bold: True
            size_hint: .2,.1
            font_size:'15sp'
            on_release: app.root.current ="tempmenu"
            background_color: 0.200, 0.150, 0.250, 1
            on_release: app.root.transition = SwapTransition()

        GridLayout:
            cols: 2
            rows: 5

            Label:
                text: "Enter your Kelvin value:  "
                bold: True
                size_hint_y: None
                height: 50
                color: 0.200, 0.150, 0.250, 1
                font_size: 16
            TextInput:
                id: input_box
                bold: True
                font_size: 22
                multiline: False
                write_tab: False
                hint_text: "0"
                size_hint_y: None
                height: 50
                input_filter: "int"
                font_size: 16


            Label:
                text: "results: "
                bold: True
                size_hint_y: None
                height: 50
                color: 0.200, 0.150, 0.250, 1
                font_size: 16
            TextInput:
                text: "Fahrenheit=" + root.ans
                bold: True
                multiline: False
                write_tab: False
                font_size: 22
                readonly: True
                size_hint_y: None
                height: 50
                font_size: 16
            Button:
                text: "C"
                bold: True
                size_hint_y: None
                height: 50
                on_press: root.clear()
                background_color: 0.200, 0.150, 0.250, 1
                font_size: 16

            Button:
                text: U"\u00AB"
                bold: True
                size_hint_y: None
                height: 50
                on_press: root.back()
                background_color: 0.200, 0.150, 0.250, 1
                font_size: 16
            Label:
                text: "Kelvin to Fahrenheit"
                bold: True
                color: 0.200, 0.150, 0.250, 1
                font_size: 16
            Label:
                text: "F = (K - 273.15) * (9/5) + 32"
                bold: True
                color: 0.200, 0.150, 0.250, 1
                font_size: 16

            Button:
                text: "Submit"
                bold: True
                on_press: root.results()
                size: root.width,root.height
                background_color: 0.200, 0.150, 0.250, 1
                font_size: 16

            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Message Box"
                    bold: True
                    background_color: 0.200, 0.150, 0.250, 1
                    font_size: 16
                TextInput:
                    text: root.error
                    bold: True
                    multiline: False
                    write_tab: False
                    readonly: True
                    size_hint_y: None
                    height: 50
                    font_size: 16
