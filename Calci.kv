#:import SwapTransition kivy.uix.screenmanager.SwapTransition
MainScreen:
    MenuScreen:
    SimpleCalculator:
    Temperature:
    CelsiustoKelvin:
    Kelvintocelsius:
    Fahrenheittocelsius:
    CelsiustoFahrenheit:
    FahrenheittoKelvin:
    KelvintoFahrenheit:

<MenuScreen>:
    name: "Main Menu"
    canvas:
        Color:
            rgba: (155/255, 200/255, 255/255,1)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        TextInput:
            text: "Time:  "+ root.t
            multiline: False
            write_tab: False
            readonly: True
            font_size:'15sp'
            pos_hint: {"center_x":.5}
            size_hint_y: None
            height: 50
            size_hint_x: None
            width: 500
            bold: True
            halign: 'center'


        AnchorLayout:
            anchor_x: "center"
            anchor_y: "top"
            padding: 50
            Label:
                text: "Main Menu"
                size_hint: .2,.1
                font_size:'30sp'
                bold: True


        GridLayout:
            padding: 50
            spacing: 100
            cols: 2
            Button:
                text: "Calculator"
                size_hint: .2,.1
                font_size:'15sp'
                background_color: 0.200, 0.150, 0.250, 1
                bold: True
                on_release: app.root.current = "calci"
                on_release: app.root.transition = SwapTransition()


            Button:
                text: "Temperature"
                size_hint: .2,.1
                font_size:'15sp'
                background_color: 0.200, 0.150, 0.250, 1
                bold: True
                on_release: app.root.current = "tempmenu"
                on_release: app.root.transition = SwapTransition()


<SimpleCalculator>:
    name: "calci"
    canvas:
        Color:
            rgba: (155/255, 200/255, 255/255,1)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        size: root.width,root.height
        Button:
            text: "Back To Main Menu"
            size_hint: .2,.1
            font_size:'15sp'
            on_release: app.root.current ="Main Menu"
            background_color: 0.200, 0.150, 0.250, 1
            on_release: app.root.transition = SwapTransition()

        TextInput:
            id: input_box
            text: "0"
            font_size: 43
            multiline: False
            haling: "left"
            size_hint: (1,0.19)
            background_color: 1,1,1, 1

        GridLayout:
            cols: 4
            rows: 5

            Button:
                text: "%"
                font_size: 32
                on_press: root.operator("%")
                background_color: 0.200, 0.150, 0.250, 1
            Button:
                text: "C"
                font_size: 32
                on_press: root.clear()
                background_color: 0.200, 0.150, 0.250, 1

            Button:
                text: U"\u00AB"
                font_size: 32
                on_press: root.rem()
                background_color: 0.200, 0.150, 0.250, 1

            Button:
                text: "/"
                font_size: 32
                on_press: root.operator("/")
                background_color: 0.200, 0.150, 0.250, 1

            Button:
                text: "7"
                font_size: 32
                on_press: root.button_value("7")
                background_color: 0.200, 0.150, 0.250, 1

            Button:
                text: "8"
                font_size: 32
                on_press: root.button_value("8")
                background_color: 0.200, 0.150, 0.250, 1

            Button:
                text: "9"
                font_size: 32
                on_press: root.button_value("9")
                background_color: 0.200, 0.150, 0.250, 1

            Button:
                text: "X"
                font_size: 32
                on_press: root.operator("*")
                background_color: 0.200, 0.150, 0.250, 1

            Button:
                text: "4"
                font_size: 32
                on_press: root.button_value("4")
                background_color: 0.200, 0.150, 0.250, 1
            Button:
                text: "5"
                font_size: 32
                on_press: root.button_value("5")
                background_color: 0.200, 0.150, 0.250, 1
            Button:
                text: "6"
                font_size: 32
                on_press: root.button_value("6")
                background_color: 0.200, 0.150, 0.250, 1
            Button:
                text: "-"
                font_size: 32
                on_press: root.operator("-")
                background_color: 0.200, 0.150, 0.250, 1

            Button:
                text: "1"
                font_size: 32
                on_press: root.button_value("1")
                background_color: 0.200, 0.150, 0.250, 1
            Button:
                text: "2"
                font_size: 32
                on_press: root.button_value("2")
                background_color: 0.200, 0.150, 0.250, 1
            Button:
                text: "3"
                font_size: 32
                on_press: root.button_value("3")
                background_color: 0.200, 0.150, 0.250, 1
            Button:
                text: "+"
                font_size: 32
                on_press: root.operator("+")
                background_color: 0.200, 0.150, 0.250, 1

            Button:
                text: "+/-"
                font_size: 32
                on_press: root.posneg()
                background_color: 0.200, 0.150, 0.250, 1
            Button:
                text: "0"
                font_size: 32
                on_press: root.button_value("0")
                background_color: 0.200, 0.150, 0.250, 1
            Button:
                text: "."
                font_size: 32
                on_press: root.operator(".")
                background_color: 0.200, 0.150, 0.250, 1
            Button:
                text: "="
                font_size: 32
                on_press: root.equal_to()
                background_color: 0.200, 0.150, 0.250, 1
